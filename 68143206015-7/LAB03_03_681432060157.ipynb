    "def stat_calc(mode, *args):\n",
    "    if len(args) == 0:\n",
    "        return 0\n",
    "    if mode == \"avg\":\n",
    "        return sum(args) / len(args)\n",
    "    elif mode == \"max\":\n",
    "        return max(args)\n",
    "print(stat_calc(\"avg\", 10, 20, 30))  \n",
    "print(stat_calc(\"avg\")) "
   ]
